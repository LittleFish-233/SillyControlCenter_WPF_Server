      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SillyControlCenter_WPF_Server"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="640"
      Title="zhuye">

    <Grid>

 <TextBlock Text="沙雕智能控制中心" Foreground="White" HorizontalAlignment="Center" Margin="15,60,0,0"
